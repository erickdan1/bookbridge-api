{
  "name": "api-book-bridge",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "test:staged": "jest --PassWithNoTests --findRelatedTests --silent",
    "test:ci": "jest --coverage --noStackTrace --silent"
  },
  "standard": {
    "env": ["jest"]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "standard": "^17.1.2"
  }
}
